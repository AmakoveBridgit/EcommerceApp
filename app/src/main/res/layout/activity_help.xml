<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d2f7dd"
    android:padding="16dp"
    >

    <!-- ScrollView to allow scrolling when content overflows -->
    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How can we help you?"
                android:textAlignment="center"
                android:fontFamily="serif"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- FAQ 1 -->
            <TextView
                android:id="@+id/faq_question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q1: How do I reset my password?"
                android:textSize="18sp"
                android:fontFamily="serif"

                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/faq_answer1"
                android:fontFamily="serif"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A1: To reset your password, click on the 'Forgot Password' link on the login page and follow the instructions."
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- FAQ 2 -->
            <TextView
                android:id="@+id/faq_question2"
                android:fontFamily="serif"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q2: How can I contact customer support?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/faq_answer2"
                android:fontFamily="serif"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A2: You can reach our customer support via email at support@example.com or by calling 123-456-789."
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- FAQ 3 -->
            <TextView
                android:id="@+id/faq_question3"
                android:fontFamily="serif"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q3: How do I make a payment?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/faq_answer3"
                android:fontFamily="serif"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A3: To make a payment, go to the 'Cart' section and click on 'Proceed to Checkout'. Select your preferred payment method and follow the on-screen instructions."
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Add more FAQs as needed -->

        </LinearLayout>
    </android.widget.ScrollView>

</android.widget.LinearLayout>
